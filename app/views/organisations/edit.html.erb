<main id="content" role="main" class="bg-light">

  <%= render 'users/cover'  %>

  <div class="container space-1 space-top-lg-0 mt-lg-n10" style="position: relative ; top: -80px ;">
    <div class="row">
      <%= render 'users/left_column' %>

      <div class="col-lg-8">
        <div class="card mb-3 mb-lg-5">
          <div class="card-header">
            <h5 class="card-title mt-3">Modifier l'Asso</h5>
          </div>
          <div class="card-body">
            <%= simple_form_for @organisation,
            url: url_for(action: 'update'),
            method: :put do |f| %>
              <%= f.input :logo, as: :file, label: false %>
              <div class="row">
                <div class="col-sm-3 pt-1 d-block text-gray-dark" style="color:gray;">NOM</div>
                <div class="col-sm-8">
              <%= f.input :name, class:"form-control m-3", label: false  %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-3 pt-1 d-block text-gray-dark" style="color:gray;">DESCRIPTION</div>
                <div class="col-sm-8">
                  <%= f.input :description, class:"form-control m-3", label: false  %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-3 pt-1 d-block text-gray-dark" style="color:gray;">NUMERO SIREN</div>
                <div class="col-sm-8">
                  <%= f.input :registration_number, class:"form-control m-3", label: false  %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-3 pt-1 d-block text-gray-dark" style="color:gray;">DATE ENREGISTREMENT</div>
                <div class="col-sm-8">
                  <%= f.input :registration_date, class:"form-control m-3", end_year: 2020, start_year: 1800, label: false, default: nil  %>
                </div>
              </div>
              <hr>
              <h5 class="my-3">ADRESSE</h5>
              <%= f.simple_fields_for :address do |a| %>
                <div class="row">
                  <div class="col-sm-3 pt-1 d-block text-gray-dark" style="color:gray;">NUMERO</div>
                  <div class="col-sm-8">
                    <%= a.input :number, class:"form-control m-3", placeholder: "4bis", label: false  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-3 pt-1 d-block text-gray-dark" style="color:gray;">RUE</div>
                  <div class="col-sm-8">
                    <%= a.input :street, class:"form-control m-3", placeholder: "rue du Père Noël", label: false  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-3 pt-1 d-block text-gray-dark" style="color:gray;">VILLE</div>
                  <div class="col-sm-8">
                    <%= a.input :city, class:"form-control m-3", placeholder: "Paris", label: false  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-3 pt-1 d-block text-gray-dark" style="color:gray;">CODE POSTAL</div>
                  <div class="col-sm-8">
                    <%= a.input :zipcode, class:"form-control m-3", placeholder: "75015", label: false  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-3 pt-1 d-block text-gray-dark" style="color:gray;">PAYS</div>
                  <div class="col-sm-8">
                    <%= a.input :country, class:"form-control m-3", as: :string, placeholder: "France", label: false  %>
                  </div>
                </div>
              <% end %>
              </div>
              <div class="card-footer d-flex justify-content-end">
                <%= f.button :submit, 'Modifier', class:"btn btn-primary"%>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
</main>
