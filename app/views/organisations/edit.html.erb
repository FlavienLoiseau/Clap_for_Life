<main id="content" role="main" class="bg-light">

  <%= render 'users/cover'  %>

  <div class="container space-1 space-top-lg-0 mt-lg-n10" style="position: relative ; top: -80px ;">
    <div class="row">
      <%= render 'users/left_column' %>

      <div class="col-lg-8">
        <div class="card mb-3 mb-lg-5">
          <div class="card-header">
            <h5 class="card-title mt-3">Modifier l'Asso</h5>
          </div>
          <div class="card-body">
            <%= simple_form_for @organisation,
            url: url_for(action: 'update'),
            method: :put do |f| %>
              <%= f.input :name, class:"form-control m-3"  %>
              <%= f.input :description, class:"form-control m-3"  %>
              <%= f.input :registration_number, class:"form-control m-3"  %>
              <%= f.input :registration_date, class:"form-control m-3", end_year: 2002, start_year: 1940 %>
              <%= f.simple_fields_for :address do |a| %>
                <%= a.input :number, class:"form-control m-3", placeholder: "4bis" %>
                <%= a.input :street, class:"form-control m-3", placeholder: "rue du Père Noël" %>
                <%= a.input :city, class:"form-control m-3", placeholder: "Paris" %>
                <%= a.input :zipcode, class:"form-control m-3", placeholder: "75015" %>
                <%= a.input :country, class:"form-control m-3", as: :string, placeholder: "France" %>
              <% end %>
            <%= f.button :submit, 'Modifier', class:"btn btn-primary"%>
            <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</main>
