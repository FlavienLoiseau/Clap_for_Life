
      <%= form_for @user do |f| %>
      <%= f.text_field :first_name, class:"form-control m-3" %>
      <%= f.text_field :last_name, class:"form-control m-3" %>



      <%= f.fields_for :address do |a| %>
        
        <%= a.text_field :number, class:"form-control m-3" %>
        <%= a.text_field :street, class:"form-control m-3" %>
        <%= a.text_field :city, class:"form-control m-3" %>
        <%= a.text_field :zipcode, class:"form-control m-3" %>

      <% end %>
      <%= f.submit "envoeyr" %>
      <% end %>
