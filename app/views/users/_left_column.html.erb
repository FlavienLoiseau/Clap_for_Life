<div class="col-lg-3">
  <!-- Navbar -->
  <div class="navbar-expand-lg navbar-expand-lg-collapse-block navbar-light">
    <div id="sidebarNav" class="collapse navbar-collapse navbar-vertical">
      <!-- Card -->
      <div class="card mb-5">
        <div class="card-body">
          <!-- Avatar -->
          <div class="d-none d-lg-block text-center mb-5">
            <%if @user.avatar.attached?%>
                    <%= image_tag @user.avatar, alt: 'avatar', class: "avatar avatar-xxl avatar-circle mb-3" %>
                  <%else%>
                     <div class="avatar avatar-xxl avatar-circle mb-3"></div>
                  <%end%>

            <h4 class="card-title"><%= current_user.username %></h4>
            <p class="card-text font-size-1"><p><%= current_user.first_name %> <%= current_user.last_name %></p>
          </div>
          <!-- End Avatar -->

          <h6 class="text-muted" style="font-size:0.9em">INFORMATIONS UTILISATEUR</h6>

          <!-- List -->
          <ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
            <li class="nav-item">
              <i class="fas fa-id-card nav-icon"></i><a class="btn user-btn btn-unique text-left" style="font-size:0.7em" <%= link_to "Infos perso", user_path(current_user.id) %></a>
            </li>
            <li class="nav-item">
              <i class="far fa-check-square"></i><a class="btn user-btn  btn-unique text-left" style="font-size:0.7em" <%= link_to "Missions", user_missions_path(current_user.id) %></a>
            </li>
            <li class="nav-item">
              <i class="fas fa-pencil-alt"></i><a class="btn user-btn btn-unique text-left" style="font-size:0.7em" <%= link_to "Editer le profil", edit_user_path(current_user) %></a>
            </li>
            <li class="nav-item mb-2">
                <i class="fas fa-shield-alt nav-icon"></i><a class="btn user-btn btn-unique text-left" style="font-size:0.7em" <%= link_to "Editer le compte", edit_user_registration_path %></a>

            </li>
          </ul>
          <!-- End List -->

          <h6 class="text-muted" style="font-size:0.9em">INFORMATIONS ASSOCIATION</h6>
          <% if current_user.organisation.blank? %>
          <ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
            <li class="nav-item">
              <i class="fas fa-plus-circle"></i><a class="btn user-btn btn-unique text-left" style="font-size:0.7em" <%= link_to "Créer association", new_organisation_path %></a>
            </li>
          </ul>
          <% else %>
          <ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
            <li class="nav-item">
              <i class="fas fa-id-card nav-icon"></i><a class="btn user-btn btn-unique text-left" style="font-size:0.7em" <%= link_to "Infos asso", info_organisation_path(current_user.organisation) %></a>
            </li>
            <li class="nav-item">
              <i class="fas fa-pencil-alt"></i><a class="btn user-btn btn-unique text-left" style="font-size:0.7em" <%= link_to "Editer l'asso", edit_organisation_path(current_user.organisation) %></a>
            </li>
            <li class="nav-item">
              <i class="fas fa-plus-circle"></i>
              <a class="btn btn-unique user-btn text-left" style="font-size:0.7em"
                <%= link_to "Créer une mission", new_organisation_mission_path(current_user.organisation.id)%>
              </a>
            </li>
            <li class="nav-item">
                <i class="fas fa-heart nav-icon"></i><a class="btn btn-unique active text-left" style="font-size:0.7em" <%= link_to "Dashboard", "/home/dashboard" %></a>
            </li>
          </ul>
          <% end %>
        </div>
      </div>
      <!-- End Card -->
    </div>
  </div>
  <!-- End Navbar -->
</div>
