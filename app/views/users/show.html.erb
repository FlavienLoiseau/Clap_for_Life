                  </li>
                </ul>
                <!-- End List -->

                <h6 class="text-muted" style="font-size:0.9em">INFORMATIONS ASSOCIATION</h6>

                <!-- List -->
                <% if @user.organisation_admin == false %>
                <ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
                  <li class="nav-item">
                    <a class="btn btn-unique text-left" style="font-size:0.7em" href="orders.html">
