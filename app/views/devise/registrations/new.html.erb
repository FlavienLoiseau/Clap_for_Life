<div class="container-fluid px-3">
  <div class="row min-vh-100">
    <div class="col-sm-12 col-md-12 col-lg-6 col-xl-5 d-flex align-items-center">
      <div class="w-100 py-5 px-md-5 px-xl-6 position-relative">
        <div class="mb-4">
          <div class="form-signin container my-4">
            <h1 class="header mb-4">Inscription</h1>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email, "Email" %>
                <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
              </div>
              <div class="form-group">
                <%= f.label :Mot_de_passe %>
                <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', required: true %>
                <% if @minimum_password_length %>
                  <small>(<%= @minimum_password_length %> caract√®res minimum)</small>
                <% end %><br />
              </div>
              <div class="form-group">
                <%= f.label :Confirmation_du_mot_de_passe %>
                <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control', required: true %>
              </div>
              <div class="form-group">
                <%= f.submit "S'inscrire", class: 'btn btn-primary my-4' %>
              </div>
            <% end %>
            <hr class="my-4">
            <%= render 'devise/shared/links' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-0 col-md-0 col-lg-6 col-xl-7 d-none d-md-block">
      <div class="bg-cover h-100 mr-n3" style="background-image: url(https://images.unsplash.com/photo-1593113646773-028c64a8f1b8?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);"></div>
    </div>
  </div>
</div>
