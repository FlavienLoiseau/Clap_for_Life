<!-- ========== MAIN ========== -->
<main id="content" role="main" class="bg-light">
  <!-- Breadcrumb Section -->
  <div class="bg-navy" style="background-image: url(https://images.unsplash.com/photo-1532629345422-7515f3d16bb6?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80); background-position: 50% 55%">
    <div class="container space-1 space-top-lg-2 space-bottom-lg-3" style="height:300px;">
      <div class="row align-items-center">
        <div class="col">
          <div class="d-none d-lg-block">
            <h1 class="my-5 text-white">Informations de <%= @user.username %></h1>
          </div>
        </div>

        <div class="col-auto">
          <div class="d-none d-lg-block">
            <a class="btn btn-sm btn-soft-light"><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "btn btn-light" %></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Breadcrumb Section -->

  <!-- Content Section -->
  <div class="container space-1 space-top-lg-0 mt-lg-n10" style="position: relative ; top: -80px ;">
    <div class="row">
      <div class="col-lg-3">
        <!-- Navbar -->
        <div class="navbar-expand-lg navbar-expand-lg-collapse-block navbar-light">
          <div id="sidebarNav" class="collapse navbar-collapse navbar-vertical">
            <!-- Card -->
            <div class="card mb-5">
              <div class="card-body">
                <!-- Avatar -->
                <div class="d-none d-lg-block text-center mb-5">
                  <div class="avatar avatar-xxl avatar-circle mb-3">
                    <!-- <img class="avatar-img" src="" alt="Image Description"> -->
                  </div>

                  <h4 class="card-title"><%= @user.username %></h4>
                  <p class="card-text font-size-1"><p><%= @user.first_name %> <%= @user.last_name %></p>
                </div>
                <!-- End Avatar -->

                <h6 class="text-muted" style="font-size:0.9em">INFORMATIONS UTILISATEUR</h6>

                <!-- List -->
                <ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
                  <li class="nav-item">
                    <i class="fas fa-id-card nav-icon"></i><a class="btn btn-unique active text-left" style="font-size:0.7em" <%= link_to "Infos perso", user_path(current_user.id) %></a>
                  </li>
                  <li class="nav-item">
                    <i class="far fa-check-square"></i><a class="btn btn-unique active text-left" style="font-size:0.7em; color: #d24d57" <%= link_to "Missions", "/home/missions" %></a>
                  </li>
                  <li class="nav-item">
                  <i class="fas fa-pencil-alt"></i><a class="btn btn-unique active text-left" style="font-size:0.7em" <%= link_to "Editer le profil", edit_user_path(current_user) %></a>
                  </li>
                  <li class="nav-item mb-2">
                      <i class="fas fa-shield-alt nav-icon"></i><a class="btn btn-unique active text-left" style="font-size:0.7em" <%= link_to "Editer le compte", edit_user_registration_path %></a>

                  </li>
                </ul>
                <!-- End List -->

                <h6 class="text-muted" style="font-size:0.9em">INFORMATIONS ASSOCIATION</h6>

                <!-- List -->
                <% if @user.organisation_admin == false %>
                <ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
                  <li class="nav-item">
                    <i class="fas fa-plus-circle"></i><a class="btn btn-unique text-left" style="font-size:0.7em" <%= link_to "Créer association", new_organisation_path %></a>
                  </li>
                </ul>
                <% else %>
                <ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
                  <li class="nav-item">
                      <i class="fas fa-id-card nav-icon"></i><a class="btn btn-unique active text-left" style="font-size:0.7em" <%= link_to "Infos asso", "/home/organisationinfo" %></a>
                  </li>
                  <li class="nav-item">
                  <i class="fas fa-pencil-alt"></i><a class="btn btn-unique active text-left" style="font-size:0.7em" <%= link_to "Editer le profil", "/home/organisationedit" %></a>
                  </li>
                  <li class="nav-item">
                    <i class="fas fa-plus-circle"></i><a class="btn btn-unique text-left" style="font-size:0.7em"  <%= link_to "Créer une mission", new_mission_path %></a>
                  </li>
                  <li class="nav-item">
                      <i class="fas fa-heart nav-icon"></i><a class="btn btn-unique active text-left" style="font-size:0.7em" <%= link_to "Dashboard", "/home/dashboard" %></a>
                  </li>
                </ul>
                <% end %>
                <!-- End List -->

              </div>
            </div>
            <!-- End Card -->
          </div>
        </div>
        <!-- End Navbar -->
      </div>

      <div class="col-lg-9">
        <!-- Card -->
        <div class="card mb-3 mb-lg-5">
          <div class="card-header">
            <h5 class="card-title mt-3">Les missions auxquelles je participe</h5>
          </div>

          <!-- Body -->
          <div class="card-body row">
            <% @participations.each do |participation| %>
            <% if participation.user == @user %>
              <!-- venue item-->
              <div class="col-sm-6 col-lg-6 mb-5 hover-animate" data-marker-id="59c0c8e33b1527bfe2abaf92">
                <div class="card h-100 border-0 shadow">
                  <div class="card-img-top overflow-hidden dark-overlay bg-cover" style="background-image: url(https://www.linfodurable.fr/sites/linfodurable/files/styles/landscape_w800/public/2018-06/NETTOYAGES%20DE%20PLAGE.jpg?h=a7a713b3&itok=D2cYNkDE); min-height: 200px;"><%= link_to "", organisation_mission_path(participation.mission.organisation.id, participation.mission.id), class: "tile-link"%>
                    <div class="card-img-overlay-bottom z-index-20">
                      <h4 class="text-white text-shadow"><%= participation.mission.title%></h4>
                    </div>
                    <div class="card-img-overlay-top d-flex justify-content-between align-items-center">
                      <div class="badge badge-transparent badge-pill px-3 py-2 mt-2"><%if participation.mission.organisation.tags.present?%>
                        <%=participation.mission.organisation.tags.last.name%>
                        <%end%>
                        </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <i class="fas fa-search-location" style="color:#808080"></i><small style="color:#808080"> <%=participation.mission.address.city%>,  <%=participation.mission.address.zipcode%></small><br>
                    <i class="fas fa-users" style="color:#808080"></i><small style="color:#808080"> Besoin de <%=participation.mission.volunteers_needed%> volontaires</small><br>
                    <i class="fas fa-calendar-day" style="color:#808080"></i><small style="color:#808080"> Date: <%=participation.mission.start_date%></small><br></p>

                    <%= link_to "Voir la mission", organisation_mission_path(participation.mission.organisation.id, participation.mission.id), class: "btn btn-primary mb-2"%><br>
                    <%= link_to "#{participation.mission.organisation.name}", organisation_path(participation.mission.organisation.id), class: "btn btn-light mb-3"%>
                    <p class="mb-0">
                      <small style="color:#808080"> <%participation.mission.tags.each do |tag|%>
                      <li class="list-inline-item mr-3"><i class="fas fa-tags"></i> <%=tag.name%></li>
                      <%end%></small>
                      </p>
                  </div>
                </div>
              </div>
              <%end%>
            <%end%>

          </div>
          <!-- End Body -->

      </div>
    </div>
    <!-- End Row -->
  </div>
  <!-- End Content Section -->
</main>
<!-- ========== END MAIN ========== -->
